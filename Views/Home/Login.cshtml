@model Client
@{
    ViewData["Title"] = "Login";
}

<div class="breadcrumb-area gray-bg-7">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html">Home</a></li>
                <li class="active"> login / Register </li>
            </ul>
        </div>
    </div>
</div>
<div class="login-register-area pt-60 pb-65">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab" href="#lg1">
                            <h4> login </h4>
                        </a>
                        <a data-toggle="tab" href="#lg2">
                            <h4> register </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="#" method="post">
                                        <input type="text" name="user-name" placeholder="Username">
                                        <input type="password" name="user-password" placeholder="Password">
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox">
                                                <label>Remember me</label>
                                                <a href="#">Forgot Password?</a>
                                            </div>
                                            <button type="submit"><span>Login</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div id="lg2" class="tab-pane">
                            <div class="login-form-container">
                                @if (TempData["success"] != null)
                                {
                                    <p class="alert alert-success">@TempData["success"]</p>
                                }
                                <div class="login-register-form">
                                    <form asp-action="RegisterClient" asp-controller="Home" method="post">
                                        <div class="row">
                                            <div class="col">
                                                <input type="text" asp-for="Name" name="user-name" placeholder="Name">
                                                <span asp-validation-for="Name"></span>
                                                <select asp-for="Gender">
                                                    <option value="" selected disabled>Gender</option>
                                                    <option value="M">Male</option>
                                                    <option value="F">Female</option>
                                                </select>
                                                <span asp-validation-for="Gender"></span>
                                            </div>
                                            <div class="col">
                                                <input type="text" asp-for="Birth" name="birth" placeholder="Birth">
                                                <span asp-validation-for="Birth"></span>
                                                <input type="text" asp-for="Phone" name="phone" placeholder="Phone">
                                                <span asp-validation-for="Phone"></span>
                                            </div>
                                        </div>
                                        <input name="user-email" asp-for="Email" placeholder="E-mail" type="email">
                                        <span asp-validation-for="Email"></span>
                                        <div class="row">
                                            <div class="col">
                                                <input type="password" asp-for="Password" name="user-password" placeholder="Password">
                                                <span asp-validation-for="Password"></span>
                                            </div>
                                            <div class="col">
                                                <input type="password" name="confirm-password" placeholder="Confirm password">
                                            </div>
                                        </div>
                                        <div class="button-box">
                                            <button type="submit"><span>Register</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
